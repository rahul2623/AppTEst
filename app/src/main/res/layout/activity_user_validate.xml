<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#A4D0F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserValidate">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="261dp"
        android:layout_height="306dp"

        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Choose avater"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="224dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="9dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/mainphoto"
                android:layout_width="168dp"
                android:layout_height="173dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:layout_marginStart="29dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="37dp"
                android:src="@drawable/img"
                app:shapeAppearance="@style/cricular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toStartOf="@+id/imageView2"
                    android:background="#A4D0F4"
                    android:id="@+id/etuseranme"
                    android:hint="Enter your name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/img_1" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="405dp"
        android:layout_height="384dp"
        app:cardCornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"
        app:layout_constraintVertical_bias="0.976">

        <RelativeLayout
            android:id="@+id/a12"
            android:layout_width="match_parent"
            android:layout_height="391dp">

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="393dp"
                android:layout_height="72dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="3dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imm1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/imageView5"
                    android:src="@drawable/img_2"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="31dp"
                    android:src="@drawable/img_5"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView4"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/imageView3"
                    android:src="@drawable/img_4"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView5"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/imageView4"
                    android:src="@drawable/img_3"

                    app:shapeAppearance="@style/cricular" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_below="@+id/relativeLayout5"
                android:layout_marginTop="26dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img5"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/img7"
                    android:src="@drawable/img_6"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img6"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="31dp"
                    android:src="@drawable/img_9"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img7"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/img8"
                    android:src="@drawable/img_7"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img8"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="31dp"
                    android:layout_toStartOf="@+id/img6"
                    android:src="@drawable/img_8"
                    app:shapeAppearance="@style/cricular" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_below="@+id/relativeLayout6"
                android:layout_marginTop="35dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img9"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="31dp"

                    android:src="@drawable/img"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img10"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="31dp"
                    android:src="@drawable/img_13"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img11"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="29dp"
                    android:layout_toStartOf="@+id/img12"
                    android:src="@drawable/img_11"
                    app:shapeAppearance="@style/cricular" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img12"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="34dp"
                    android:layout_toStartOf="@+id/img10"
                    android:src="@drawable/img_12"
                    app:shapeAppearance="@style/cricular" />
            </RelativeLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="58dp"
                android:layout_below="@+id/relativeLayout7"
                android:id="@+id/mainbtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="51dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="23dp"
                android:backgroundTint="#2196F3"
                android:text="Let's go"
                android:textSize="24sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>